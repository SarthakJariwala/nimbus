{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:vite": "TAILWIND_MODE=watch vite",
    "dev:tailwind": "npx --yes @tailwindcss/cli -i frontend/css/tailwind.css -o frontend/css/output.css --watch",
    "build": "npm run build:tailwind && npm run build:vite",
    "build:tailwind": "npx --yes @tailwindcss/cli -i frontend/css/tailwind.css -o frontend/css/output.css --minify",
    "build:vite": "TAILWIND_MODE=build vite build"
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  },
  "dependencies": {
    "svelte": "^5.0.0",
    "@inertiajs/svelte": "^1.2.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.6"
  }
}
